// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // Supabase pooled
  directUrl = env("DIRECT_URL")    // Supabase direct
}

// Intentionally no models here for now.
// We have dropped the old PascalCase tables (Job, JobApplication, Tenant, etc.),
// and ATS now runs on Supabase tables directly (jobs, job_applications, candidates, ...).
// If/when we want Prisma back in the ATS layer, we will add new models that map
// to those snake_case tables with @@map("jobs"), @@map("job_applications"), etc.
