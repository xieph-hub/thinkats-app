// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

enum ApplicationStage {
  APPLIED
  SCREENING
  HM_INTERVIEW
  PANEL
  OFFER
  HIRED
  REJECTED
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // pooled
  directUrl = env("DIRECT_URL")    // direct
}

model Job {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  type        String?
  department  String?
  location    String?
  description String
  excerpt     String?
  postedAt    DateTime @default(now())
  isPublished Boolean  @default(false)

  /// NEW: client-facing fields
  /// Example: clientName = "Trips Africa", clientSlug = "trips-africa"
  clientName  String?
  clientSlug  String?

  applications Application[]
}

model Candidate {
  id        String    @id @default(cuid())
  jobId     String?   // can be null for older candidates
  job       Job?      @relation(fields: [jobId], references: [id])

  fullname  String?
  email     String?
  phone     String?
  location  String?
  resumeUrl String?
  source    String?
  rawText   String?

  createdAt DateTime? @default(now())
  applications Application[]

  @@index([email])
  @@index([createdAt])
}

model Application {
  id          String    @id @default(cuid())
  jobId       String
  candidateId String
  stage       String    @default("APPLIED") // APPLIED | SCREEN | HM | PANEL | OFFER | HIRED | REJECTED
  source      String?   // inbound, sourced, referral
  createdAt   DateTime  @default(now())

  job         Job       @relation(fields: [jobId], references: [id])
  candidate   Candidate @relation(fields: [candidateId], references: [id])
  notes       Note[]    // <-- reverse relation to Note

  @@index([jobId, createdAt])
}

model Note {
  id            String   @id @default(cuid())
  applicationId String
  author        String?
  body          String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id])

  @@index([applicationId, createdAt])
}
