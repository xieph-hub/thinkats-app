// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String?
  department  String?
  location    String?
  type        String?    // Full-time, Contract...
  description String     // HTML
  postedAt    DateTime   @default(now())
  isPublished Boolean    @default(false)

  applications Application[]

  @@index([isPublished, postedAt])
}

model Candidate {
  id         String    @id @default(cuid())
  name       String?
  email      String?
  phone      String?
  location   String?
  // For privacy, we store the private object path (not a public URL)
  resumeUrl  String?
  rawText    String?   // Placeholder for parsed resume text
  createdAt  DateTime  @default(now())

  applications Application[]

  @@index([email])
  @@index([createdAt])
}

model Application {
  id          String    @id @default(cuid())
  jobId       String
  candidateId String
  stage       String    @default("APPLIED") // APPLIED | SCREEN | HM | PANEL | OFFER | HIRED | REJECTED
  source      String?   // inbound, sourced, referral
  createdAt   DateTime  @default(now())

  job         Job       @relation(fields: [jobId], references: [id])
  candidate   Candidate @relation(fields: [candidateId], references: [id])

  @@index([jobId, createdAt])
}

model Note {
  id            String   @id @default(cuid())
  applicationId String
  author        String?
  body          String
  createdAt     DateTime @default(now())

  application Application @relation(fields: [applicationId], references: [id])

  @@index([applicationId, createdAt])
}
