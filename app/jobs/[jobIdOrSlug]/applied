// app/jobs/[jobIdOrSlug]/applied/page.tsx
import type { Metadata } from "next";
import Link from "next/link";
import { notFound } from "next/navigation";
import { supabaseAdmin } from "@/lib/supabaseAdmin";

export const dynamic = "force-dynamic";

export const metadata: Metadata = {
  title: "Application received | Resourcin",
  description: "Confirmation that your application has been received.",
};

type PageProps = {
  params: {
    jobIdOrSlug: string;
  };
};

export default async function JobAppliedPage({ params }: PageProps) {
  const { jobIdOrSlug } = params;

  const { data, error } = await supabaseAdmin
    .from("jobs")
    .select("id, slug, title")
    .or(`id.eq.${jobIdOrSlug},slug.eq.${jobIdOrSlug}`)
    .maybeSingle();

  if (error || !data) {
    notFound();
  }

  const job: any = data;
  const slugOrId: string = job.slug || job.id;

  return (
    <div className="mx-auto max-w-xl px-4 py-12 lg:px-0">
      <div className="rounded-2xl border border-emerald-100 bg-emerald-50 p-6 text-center shadow-sm">
        <p className="text-xs font-medium uppercase tracking-wide text-emerald-700">
          Application received
        </p>
        <h1 className="mt-2 text-xl font-semibold text-slate-900">
          Thank you for applying for {job.title}
        </h1>
        <p className="mt-3 text-sm text-slate-700">
          This is to acknowledge receipt of your application. A member of
          our recruitment team will reach out to you if you are a good fit
          for the role.
        </p>
        <p className="mt-3 text-xs text-slate-500">
          You don&apos;t need to re-apply. If the brief changes or we have a
          better fit for your profile, we will also consider you for those
          opportunities.
        </p>

        <div className="mt-6 flex flex-col items-center gap-2 text-xs">
          <Link
            href={`/jobs/${encodeURIComponent(slugOrId)}`}
            className="inline-flex items-center rounded-full bg-[#172965] px-4 py-1.5 font-medium text-white hover:bg-[#0f1c45]"
          >
            Back to role details
          </Link>
          <Link
            href="/jobs"
            className="text-slate-600 hover:text-slate-900"
          >
            Browse other open roles
          </Link>
        </div>
      </div>
    </div>
  );
}
