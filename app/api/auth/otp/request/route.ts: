// app/api/auth/otp/request/route.ts
import { NextRequest, NextResponse } from "next/server";

export const dynamic = "force-dynamic";

export async function POST(req: NextRequest) {
  try {
    const url = req.nextUrl.toString();
    console.log("[DEBUG OTP REQUEST] Hit /api/auth/otp/request", { url });

    return NextResponse.json({
      ok: true,
      message: "OTP request route is wired correctly.",
    });
  } catch (err) {
    console.error("[DEBUG OTP REQUEST] Error:", err);
    return NextResponse.json(
      { ok: false, error: "Unexpected error in debug route." },
      { status: 500 },
    );
  }
}
